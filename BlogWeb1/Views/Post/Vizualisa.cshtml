
@{
    Layout = null;
}
@model BlogWeb1.Models.Post
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Vizualisa</title>
</head>
<body>
    <div>
        <form action="/Post/Edita" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <label>
                Título: <input name="titulo" value="@Model.Titulo"/>
            </label>
            <label>
                Resumo: <input name="resumo" value="@Model.Resumo" />
            </label>
            <label>
                Categoria: <input name="categoria" value="@Model.Categoria" />
            </label>
            <button type="submit">Cadastrar</button>
        </form>
    </div>
</body>
</html>
