
@{
    Layout = null;
}
@model BlogWeb1.Models.Post
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Novo</title>
</head>
<body>
    <div>
        @using (Html.BeginForm("Adiciona", "Post"))
        {
            @Html.LabelFor(p => p.Titulo)
            @Html.TextBoxFor(p => p.Titulo)
            @Html.ValidationMessageFor(p => p.Titulo)

            @Html.LabelFor(p => p.Resumo)
            @Html.TextBoxFor(p => p.Resumo)
            @Html.ValidationMessageFor(p => p.Resumo)

            @Html.LabelFor(p => p.Categoria)
            @Html.TextBoxFor(p => p.Categoria)
            @Html.ValidationMessageFor(p => p.Categoria)

            <button type="submit">Cadastrar</button>
        }
    </div>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script>
        jQuery("form").validate();
    </script>
</body>
</html>
