
@{
    Layout = null;
}
@model BlogWeb1.Models.Post
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Novo</title>
</head>
<body>
    <div>
        <form action="/Post/Adiciona" method="post">
            <label>
                Título: <input name="titulo" />
            </label>
            @Html.ValidationMessage("titulo")
            <label>
                Resumo: <input name="resumo" />
            </label>
            @Html.ValidationMessage("resumo")
            <label>
                Categoria: <input name="categoria" />
            </label>
            @Html.ValidationMessage("categoria")
            <button type="submit">Cadastrar</button>
        </form>
    </div>
</body>
</html>
