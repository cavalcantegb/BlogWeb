
@{
    Layout = null;
}
@model IList<BlogWeb1.Models.Post>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        <table>
            <thead>
                <tr>
                    <th></th>
                    <th>Título</th>
                    <th>Resumo</th>
                    <th>Categoria</th>
                    <th>Publicado?</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var post in Model)
                {
                <tr>
                    <td><a href="/Post/Vizualisa/@post.Id">Editar</a></td>
                    <td>@post.Titulo</td>
                    <td>@post.Resumo</td>
                    <td>@post.Categoria</td>
                    <td>@if (post.Publicado)
                    {
                        @Html.Raw(string.Format("{0:dd/MM/yyyy}", post.DataPublicacao))
                    } else
                    {
                        @Html.Raw("Não")
                    }
                    </td>
                    <td><a href="/Post/Remove/@post.Id">Remover</a>
                        <a href="/Post/Publica/@post.Id">Publicar</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
