
@{
    Layout = null;
}
@model IList<BlogWeb1.Models.Post>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        <h2>Lista de Posts</h2>
        @Html.ActionLink("Incluir Post", "Novo")
        <table>
            <thead>
                <tr>
                    <th>Título</th>
                    <th>Resumo</th>
                    <th>Categoria</th>
                    <th>Publicado?</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var post in Model)
                {
                <tr>
                    <td>@Html.ActionLink(post.Titulo, "Visualiza", new { id = post.Id })</td>
                    <td>@post.Resumo</td>
                    <td>@post.Categoria</td>
                    <td>@if (post.Publicado)
                    {
                        @Html.Raw(string.Format("{0:dd/MM/yyyy}", post.DataPublicacao))
                    } else
                    {
                        @Html.Raw("Não")
                    }
                    </td>
                    <td>
                        @*<a href="/Post/Remove/@post.Id">Remover</a>*@
                        @Html.ActionLink("Remover", "Remove", new { id = post.Id })
                        @*<a href="/Post/Publica/@post.Id">Publicar</a>*@
                        @Html.ActionLink("Publicar", "Publica", new { id = post.Id })
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
